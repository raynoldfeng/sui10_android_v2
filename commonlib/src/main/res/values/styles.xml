<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 基本主题 -->
    <style name="SuishiBaseTheme" parent="Theme.AppCompat.Light"/>

    <!-- Base application theme. -->
    <style name="Base.SuishiAppTheme" parent="SuishiBaseTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
        <!--默认背景色-->
        <item name="android:windowBackground">@color/common_bg</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="common_topBar">false</item>
        <item name="common_topBarOverlay">false</item>
        <item name="common_statusBarImmersive">false</item>
        <item name="common_statusBarBackground">@color/transparent</item>
        <item name="common_topBarBackground">@color/transparent</item>
        <item name="common_topBarLeftDrawable">@drawable/ic_common_back</item>
        <item name="common_topBarHeight">@dimen/common_title_bar_height</item>
        <item name="common_selectableItemBackground">@drawable/common_clickable_selector</item>
        <item name="android:windowAnimationStyle">@style/Activity_Slide_Animation</item>
    </style>

    <style name="SuishiAppTheme" parent="Base.SuishiAppTheme"/>

    <style name="SuishiAppTheme.BaseUI" parent="SuishiAppTheme">
        <item name="common_topBar">true</item>
        <item name="common_topBarBackground">@color/common_bg</item>
        <item name="common_statusBarBackground">@android:color/transparent</item>
    </style>

    <style name="SuishiAppTheme.BaseUI.NoTitle" parent="SuishiAppTheme">
        <item name="common_topBar">false</item>
        <item name="common_topBarBackground">@color/transparent</item>
        <item name="common_statusBarBackground">@android:color/transparent</item>
    </style>

    <style name="SuishiAppTheme.BaseUI.NoTitle.IMMersive" parent="SuishiAppTheme">
        <item name="common_statusBarImmersive">true</item>
    </style>

    <style name="SuishiAppTheme.BaseUI.Fullscreen" parent="SuishiAppTheme.BaseUI.NoTitle.IMMersive">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="common_statusBarImmersive">true</item>
    </style>

    <style name="SuishiAppTheme.BaseUI.NoTitle.Main" parent="SuishiAppTheme.BaseUI.NoTitle">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="Activity_Slide_Animation">
        <item name="android:activityOpenEnterAnimation">@anim/common_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/common_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/common_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/common_right_in</item>
    </style>

    <style name="SuishiThemeSplash" parent="SuishiAppTheme.BaseUI.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

  、
</resources>