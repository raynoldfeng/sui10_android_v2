<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <com.sui10.commonlib.ui.view.widget.scroll.StickyNavLayout
        android:id="@+id/layout_pro_course_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

        <com.sui10.commonlib.ui.view.widget.scroll.StickyNavChildView
            android:id="@+id/layout_sticky_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent">

            <include
                android:id="@+id/scroll_head"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                layout="@layout/view_pro_course_detail_head"/>

            <RelativeLayout
                android:id="@id/scroll_nav"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_below="@+id/scroll_head">

                <com.sui10.commonlib.ui.view.widget.viewpage.SwipeTabView
                    android:id="@+id/swipe_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_alignParentLeft="true"
                    app:bottom_line_visibility="true"
                    android:background="@drawable/bg_white_radius_16dp_top">
                </com.sui10.commonlib.ui.view.widget.viewpage.SwipeTabView>
            </RelativeLayout>
        </com.sui10.commonlib.ui.view.widget.scroll.StickyNavChildView>

        <com.sui10.commonlib.ui.view.widget.viewpage.SwipeViewPage
            android:id="@id/scroll_content"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.sui10.commonlib.ui.view.widget.scroll.StickyNavLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/course_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_16"
            android:textSize="@dimen/sp_22"
            android:textColor="@color/color_FFE3A344">
        </TextView>

        <TextView
            android:id="@+id/course_price_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/course_price_tv"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_3"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_FFE3A344"
            android:text="@string/price_title">
        </TextView>

        <TextView
            android:id="@+id/study_now_tv"
            android:layout_width="@dimen/dp_220"
            android:layout_height="@dimen/dp_44"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_16"
            android:text="@string/study_now"
            android:textColor="@color/color_FF805012"
            android:background="@drawable/bg_common_btn">
        </TextView>

    </RelativeLayout>

</RelativeLayout>