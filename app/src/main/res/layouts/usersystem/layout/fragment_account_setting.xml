<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/top_bar_layout"
        layout="@layout/common_toolbar" />

    <View
        android:id="@+id/spliting_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/top_bar_layout"
        android:background="@color/black_transparency_10_percent"
        ></View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_below="@+id/spliting_line">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--头像-->
            <RelativeLayout
                android:id="@+id/item_user_portrait"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60">

                <TextView
                    android:id="@+id/user_portrait_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_text_color"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_16"
                    android:text="@string/personal_portrait"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/personal_portrait"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/portrait_right_arrow"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="@color/transparent"
                    android:src="@drawable/circle_fee6c4"
                    />

                <ImageView
                    android:id="@+id/portrait_right_arrow"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_lottery_more" />
            </RelativeLayout>

            <!--昵称-->
            <View
                android:id="@+id/spliting_line1"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_height="0.5dp"
                android:layout_alignParentRight="true"
                android:background="@color/white_transparency_10_percent"
                ></View>

            <RelativeLayout
                android:id="@+id/item_nick"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60">

                <TextView
                    android:id="@+id/nick_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_text_color"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_16"
                    android:text="@string/personal_nick"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/personal_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_text_color"
                    android:layout_toLeftOf="@+id/nick_right_arrow"
                    android:layout_marginRight="@dimen/dp_12"
                    android:textSize="@dimen/sp_16"
                    android:text="@string/app_name"
                    android:maxWidth="@dimen/dp_220"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/nick_right_arrow"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_lottery_more" />
            </RelativeLayout>

            <!--性别-->
            <View
                android:id="@+id/spliting_line2"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_height="0.5dp"
                android:layout_alignParentRight="true"
                android:background="@color/white_transparency_10_percent">
            </View>

            <RelativeLayout
                android:id="@+id/item_gender"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60">

                <TextView
                    android:id="@+id/gender_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_text_color"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_16"
                    android:text="@string/gender"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/personal_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_text_color"
                    android:layout_toLeftOf="@+id/sex_right_arrow"
                    android:layout_marginRight="@dimen/dp_12"
                    android:textSize="@dimen/sp_16"
                    android:text=""
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/sex_right_arrow"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_lottery_more" />
            </RelativeLayout>

            <!--生日-->
            <View
                android:id="@+id/spliting_line3"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_height="0.5dp"
                android:layout_alignParentRight="true"
                android:background="@color/white_transparency_10_percent"
                ></View>

            <RelativeLayout
                android:id="@+id/item_birth"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60">

                <TextView
                    android:id="@+id/birth_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_text_color"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_16"
                    android:text="@string/birthday"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/personal_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_text_color"
                    android:layout_toLeftOf="@+id/birth_right_arrow"
                    android:layout_marginRight="@dimen/dp_12"
                    android:textSize="@dimen/sp_16"
                    android:text="@string/not_write"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:id="@+id/birth_right_arrow"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_lottery_more" />
            </RelativeLayout>

            <!--个性签名-->
            <View
                android:id="@+id/spliting_line4"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_height="0.5dp"
                android:layout_alignParentRight="true"
                android:background="@color/white_transparency_10_percent"
                ></View>

            <RelativeLayout
                android:id="@+id/item_signature"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60">

                <TextView
                    android:id="@+id/signature_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_text_color"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_16"
                    android:text="@string/signature"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/personal_signature"
                    android:layout_width="@dimen/dp_200"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:maxLength="20"
                    android:textColor="@color/common_text_color"
                    android:layout_toLeftOf="@+id/signature_right_arrow"
                    android:layout_marginRight="@dimen/dp_12"
                    android:maxLines="2"
                    android:textSize="@dimen/sp_16"
                    android:text="@string/not_write"
                    android:layout_centerVertical="true" />


                <ImageView
                    android:id="@+id/signature_right_arrow"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_lottery_more" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>