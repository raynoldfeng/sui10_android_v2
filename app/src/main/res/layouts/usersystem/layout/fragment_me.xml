<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/menu_profile_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_210"
        android:paddingTop="@dimen/dp_50"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/menu_profile_avatar_iv"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@drawable/circle_fee6c4"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:clickable="false"/>

        <TextView
            android:id="@+id/menu_profile_nick_tv"
            android:textColor="@color/common_text_color"
            android:gravity="left|center_vertical"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/menu_profile_avatar_iv"
            android:layout_marginLeft="@dimen/dp_12"
            android:maxWidth="@dimen/dp_200"
            android:maxLines="1"
            android:ellipsize="end"
            android:text=""/>

        <TextView
            android:id="@+id/menu_profile_desc_tv"
            android:textColor="@color/common_text_color"
            android:layout_toRightOf="@+id/menu_profile_avatar_iv"
            android:gravity="left"
            android:layout_alignLeft="@+id/menu_profile_nick_tv"
            android:textSize="@dimen/sp_12"
            android:text=""
            android:layout_below="@+id/menu_profile_nick_tv"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/login_btn"
            android:layout_marginRight="@dimen/dp_20"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/login_btn"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_alignBaseline="@+id/menu_profile_avatar_iv"
            android:layout_marginTop="@dimen/dp_30"
            android:gravity="center"
            android:background="@drawable/bg_common_btn_20dp"
            android:text="@string/login_immeidate">
        </TextView>

        <TextView
            android:id="@+id/not_login_tips_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu_profile_avatar_iv"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_24"
            android:text="@string/not_logined"
            android:textColor="@color/black"
            android:visibility="gone">
        </TextView>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/black_transparency_5_percent">
    </View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/menu_profile_layout"
        android:layout_marginTop="@dimen/dp_12">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--个人资料-->
            <RelativeLayout
                android:id="@+id/menu_item_user_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52">

                <ImageView
                    android:id="@+id/user_info_icon"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:background="@drawable/ic_user_cnt" />

                <TextView
                    android:id="@+id/user_info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_text_color"
                    android:layout_toRightOf="@+id/user_info_icon"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:textSize="@dimen/sp_16"
                    android:text="@string/main_menu_user_info"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/iv_profile_arrow"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_lottery_more" />
            </RelativeLayout>
            <!--已购课程-->
            <RelativeLayout
                android:id="@+id/menu_item_my_course"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52">

                <ImageView
                    android:id="@+id/my_course_icon"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:background="@drawable/ic_user_cnt" />

                <TextView
                    android:id="@+id/purchase_course_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_text_color"
                    android:layout_toRightOf="@+id/my_course_icon"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:textSize="@dimen/sp_16"
                    android:text="@string/main_menu_my_course"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_lottery_more" />
            </RelativeLayout>

            <!--设置-->
            <RelativeLayout
                android:id="@+id/menu_item_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52">

                <ImageView
                    android:id="@+id/setting_icon"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:background="@drawable/ic_im_setting"
                    />

                <TextView
                    android:id="@+id/setting_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_text_color"
                    android:layout_toRightOf="@+id/setting_icon"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:textSize="@dimen/sp_16"
                    android:text="@string/main_menu_setting"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_lottery_more" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>