<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ln_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/verification_code_login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_FF222426"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_128"
            android:layout_marginLeft="@dimen/dp_40"
            android:text="@string/verification_code_login">
        </TextView>

        <RelativeLayout
            android:id="@+id/login_phone_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_28"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_area_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="+ 86"
                android:textColor="@color/color_FF222426"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/areacode_divider"
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_16"
                android:background="@color/common_bg_divider"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_area_code"
                android:layout_marginLeft="@dimen/dp_20"/>

            <EditText
                android:id="@+id/et_mobile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_toEndOf="@id/areacode_divider"
                android:layout_toRightOf="@id/areacode_divider"
                android:background="@null"
                android:gravity="start|center_vertical"
                android:textColor="@color/color_FF222222"
                android:hint="@string/input_mobile_phone"
                android:textColorHint="@color/color_FFAAAAAA"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="20"
                android:textSize="@dimen/sp_16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:background="@color/common_bg_divider" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_9"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@null"
                android:gravity="start|center_vertical"
                android:hint="@string/input_verifion_code"
                android:textColor="@color/color_FF222426"
                android:textColorHint="@color/color_FFAAAAAA"
                android:imeOptions="actionDone"
                android:maxLength="20"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="@dimen/dp_88"
                android:layout_height="@dimen/dp_30"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="@string/reget"
                android:gravity="center"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_FF222426"
                android:background="@drawable/bg_btn_white_with_stroke">
            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:background="@color/common_bg_divider" />
        </RelativeLayout>

        <TextView
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_31"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:gravity="center"
            android:text="@string/get_verifion_code"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:background="@drawable/bg_common_btn_enable"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/third_login_ll"
        android:layout_marginBottom="@dimen/dp_24"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_2"
            android:background="@color/common_bg_divider">
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/can_login_by"
            android:textColor="@color/color_FF999999"
            android:layout_marginLeft="@dimen/dp_16"
            android:textSize="@dimen/sp_12" />
        <View
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_2"
            android:background="@color/common_bg_divider"
            android:layout_marginLeft="@dimen/dp_16">
        </View>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/third_login_ll"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_82">

        <Button
            android:id="@+id/btn_one"
            style="@style/AccountButton"
            android:layout_width="@dimen/dp_47"
            android:layout_height="@dimen/dp_47"
            android:layout_gravity="center"
            android:background="@drawable/ic_login_qq" />

        <Button
            android:id="@+id/btn_two"
            style="@style/AccountButton"
            android:layout_width="@dimen/dp_47"
            android:layout_height="@dimen/dp_47"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_32"
            android:background="@drawable/ic_login_wechat" />
    </LinearLayout>

</RelativeLayout>